---
/**
 * * Pricing cards with three cards
 */

import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

// components
import Button from "@components/Button/Button.astro";

interface pricingItem {
  name: string; // plan name
  featured?: boolean; // if true, will be highlighted or otherwise featured
  price: number;
  features: string[]; // list of features
  image: ImageMetadata; // imported image
}

import image1 from "@assets/images/couple-5-min.jpg";
import image2 from "@assets/images/couple-6-crop.jpg";
import image3 from "@assets/images/couple-1-square.jpg";
import image4 from "@assets/images/digital-marketing.jpg";
import image5 from "@assets/images/market-research.jpg";
import image6 from "@assets/images/content-creation.jpg";

// This is designed for 3 pricing items, but can be modified to support more
const pricingData: pricingItem[] = [
{
    name: "Visual Designing",
    featured: true,
    price: "",
    features: [
      "Custom website design and development",
      "User interface (UI) and user experience (UX) design",
      "Logo creation and brand identity packages",
      "Responsive design for all devices",
      "Ongoing design support and maintenance",
    ],
    image: image3,
  },
  {
    name: "Photography",
    featured: false,
    price: "",
    features: [
      "Professional photo shoots",
      "High-quality editing and retouching",
      "Private online gallery via Google Drive/Dropbox",
      "Commercial and personal use licensing",
      "Optional videography services available",
    ],
    image: image1,
  },
  {
    name: "Ads Services",
    featured: true,
    price: "",
    features: [
      "Targeted ad campaign creation and management",
      "Multi-platform advertising (Google, Facebook, Instagram, etc.)",
      "A/B testing and performance optimization",
      "Monthly reporting and strategy adjustments",
      "Retargeting campaigns",
    ],
    image: image2,
  },
  {
    name: "Digital Marketing",
    featured: false,
    price: "",
    features: [
      "Comprehensive digital marketing strategy",
      "Search engine optimization (SEO)",
      "Social media management and growth",
      "Email marketing campaigns",
      "Analytics and ROI tracking",
    ],
    image: image4,
  },
  {
    name: "Market & Audience Research",
    featured: false,
    price: "",
    features: [
      "In-depth industry and competitor analysis",
      "Target audience profiling and segmentation",
      "Consumer behavior insights and trends",
      "Market opportunity identification",
      "Data-driven recommendations for growth",
    ],
    image: image5,
  },
  {
    name: "Content Creation",
    featured: false,
    price: "",
    features: [
      "Customized content strategy development",
      "Blog posts and articles",
      "Social media content (posts, stories, reels)",
      "Video production and editing",
      "Infographics and visual content",
    ],
    image: image6,
  },
];
---

<section id="services" class="mx-auto max-w-6xl scroll-mt-10 px-4 py-8 md:py-12">
  <div class="mx-auto max-w-6xl text-center">
    <h2 class="h2 text-pretty uppercase">Our Services</h2>
  </div>

  <!-- works for 3 pricing plans, adjust grid cols here to support more or less -->
  <div
    class="mx-auto grid w-full max-w-md gap-12 pt-8 sm:max-w-none sm:grid-cols-2 md:pt-12 lg:grid-cols-3"
  >
    {
      pricingData.map((plan) => (
        <div
          class="flex w-full flex-col"
          class:list={[
            {
              "bg-primary-200": plan.featured === true,
            },
          ]}
        >
          <div>
            <div class="aspect-[3/4] h-auto w-full overflow-hidden">
              <Image
                src={plan.image}
                alt={plan.name}
                width={720}
                loading="lazy"
                class="h-full w-full object-cover"
              />
            </div>
          </div>
          <div class="flex h-full flex-col justify-between border-2 border-t-0 border-primary-200 pb-10 pt-10">
            <div>
              <h3 class="h2 text-center">{plan.name}</h3>

              <ul class="mt-4 flex flex-col gap-3 px-8">
                {plan.features.map((feature) => (
                  <li class="leading-snug lg:text-lg lg:leading-snug">
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
            <!-- <p class="mt-6 flex justify-center text-center font-decorative text-[5rem] leading-none text-base-800">
              ${plan.price}
              <span class="flex h-full text-[3.5rem]">+</span>
            </p> -->
          </div>
        </div>
      ))
    }
  </div>

  <div class="mt-12 flex justify-center">
    <Button href="/#contact" variant="outline" class="px-8">Get a quote</Button>
  </div>
</section>
